{"legislative_session": "2026", "identifier": "HB 1021", "title": "Firearm storage.", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": ["CRIMINAL LAW AND PROCEDURE; Creation of New Offenses", "CRIMINAL LAW AND PROCEDURE; Firearms and Weapons Offenses"], "abstracts": [{"note": "Digest", "abstract": "Provides that a person having the care of a dependent who recklessly, knowingly, or intentionally fails to secure a loaded firearm in the person's residence or vehicle commits neglect of a dependent, a Level 6 felony, if the dependent uses the firearm to cause bodily injury or death to any person. Enhances the offense to a Level 5 felony in particular instances. Specifies exceptions and defenses. Specifies sign requirements for retail dealers. Defines terms and makes conforming amendments."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Authored by Representative Gore", "date": "2025-12-01", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "First reading: referred to Committee on Courts and Criminal Code", "date": "2025-12-01", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1", "referral-committee"], "related_entities": [{"name": "Courts and Criminal Code", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Mitch Gore", "classification": "author", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Mitch Gore\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced House Bill (H)", "links": [{"url": "https://iga.in.gov/pdf-documents/124/2026/house/bills/HB1021/HB1021.01.INTR.pdf", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": [{"note": "Fiscal Note: HB1021.01.INTR.FN001", "links": [{"url": "https://api.iga.in.gov/2026/fiscal-notes/HB1021.01.INTR/HB1021.01.INTR.FN001?format=